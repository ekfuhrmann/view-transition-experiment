---
import Layout from "../../layouts/Layout.astro";

const icons = [
  {
    url: "emojis/heart-hands",
    transitionName: "heart-hands",
    name: "🫶",
  },
  {
    url: "emojis/red-heart",
    transitionName: "red-heart",
    name: "❤️",
  },
  {
    url: "emojis/fire",
    transitionName: "fire",
    name: "🔥",
  },
  {
    url: "emojis/check-mark",
    transitionName: "check-mark",
    name: "✅",
  },
];
---

<!-- purgecss bg-red-500 bg-green-500 bg-blue-500 bg-purple-500 -->
<Layout title="View Transitions Boxes">
  <main class="flex min-h-screen-nav items-center justify-center">
    <ul class="mx-auto grid w-fit max-w-xs list-none grid-cols-4 gap-16">
      {
        icons.map(({ url, transitionName, name }) => (
          <li>
            <a
              href={url}
              style={`view-transition-name:${transitionName}`}
              class="text-2xl"
            >
              {name}
            </a>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>

