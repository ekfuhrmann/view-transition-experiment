---
import Layout from "../../layouts/Layout.astro";

const boxes = ["red", "green", "blue", "purple"];
---

<!-- purgecss bg-red-500 bg-green-500 bg-blue-500 bg-purple-500 -->
<Layout title="View Transitions Boxes">
  <main class="flex min-h-screen-nav items-center justify-center">
    <ul class="mx-auto grid w-fit max-w-xs list-none grid-cols-4 gap-16">
      <li>
        <a href="emojis/heart-hands" style=`view-transition-name:heart-hands`
          >🫶</a
        >
      </li>
      <li>
        <a href="emojis/red-heart" style=`view-transition-name:red-heart`>❤️</a>
      </li>
      <li>
        <a href="emojis/fire" style=`view-transition-name:fire`>🔥</a>
      </li>
      <li>
        <a href="emojis/check-mark" style=`view-transition-name:check-mark`
          >✅</a
        >
      </li>
    </ul>
  </main>
</Layout>

